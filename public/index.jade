doctype html
html
    head
        title Spy Brawl
        link(rel='stylesheet', href='/node_modules/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet', href='/node_modules/font-awesome/css/font-awesome.css')
        link(rel='stylesheet', href='/node_modules/angular-toastr/dist/angular-toastr.css')
        link(rel='stylesheet', href='/node_modules/angular-ui-bootstrap/dist/ui-bootstrap-csp.css')
        link(rel='stylesheet', href='/public/style/default.css')
    body
        nav.navbar.navbar-default(ng-controller='navController as nav')
            .container-fluid
            .navbar-header
                button.navbar-toggle(type='button', ng-init='isCollapsed = true', ng-click='isCollapsed = !isCollapsed')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(ui-sref='home') Spy-brawl
            .navbar-collapse(ng-class='{ collapse: isCollapsed }')
                ul.nav.navbar-nav.navbar-right
                    li                        
                        a(style='cursor: pointer;', ng-click='nav.changeUsernameModal()', ng-cloak) {{ nav.username }}
        div(ui-view)
        script(src='/socket.io/socket.io.js')
        script(src='/node_modules/angular/angular.js')
        script(src='/node_modules/angular-touch/angular-touch.js')
        script(src='/node_modules/angular-animate/angular-animate.js')
        script(src='/node_modules/angular-local-storage/dist/angular-local-storage.js')
        script(src='/node_modules/angular-ui-router/release/angular-ui-router.js')
        script(src='/node_modules/angular-ui-bootstrap/dist/ui-bootstrap-tpls.js')
        script(src="/node_modules/angular-toastr/dist/angular-toastr.tpls.js")
        script(src='/node_modules/angular-pageslide-directive/dist/angular-pageslide-directive.min.js')
        script(src='https://google.github.io/traceur-compiler/bin/traceur.js')
        script(src='https://google.github.io/traceur-compiler/bin/BrowserSystem.js')
        script(src='https://google.github.io/traceur-compiler/src/bootstrap.js')

        script(type='module', src='/public/app/bootstrap.js')
